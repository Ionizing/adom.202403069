General
  SYSTEM = MoSe2
  PREC   = Med
  ISPIN  = 1
  ISTART = 0
  ICHARG = 1

Electronic relaxation
  NPAR   = 4
  ISMEAR = 0
  SIGMA  = 0.1
  ALGO   = Fast
  NELMIN = 4
  NELM   = 120
  EDIFF  = 1E-6

Molecular Dynamics
  ISYM   = 0      # turn off symmetry for MD
  IBRION = 0      # turn on MD
  TEBEG  = 50
  TEEND  = 50
  NSW    = 5000   # No. of ionic steps
  POTIM  = 1      # time step 1.0 fs
  SMASS  = -3     # Microcanonical
  NBLOCK = 1      # XDATCAR contains positions of each step

Writing Flag
  NWRITE = 1      # make OUTCAR small
  LWAVE  = .FALSE.
  LCHARG = .FALSE.
